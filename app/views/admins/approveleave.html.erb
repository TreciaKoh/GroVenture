<%if session[:type]=="Master"%>
<table class = "table table-bordered table-condensed" align='center', id='sf'>
	<tr>
		<th>Date Start</th>
		<th>Date End</th>
		<th>Total</th>
		<th>Reason</th>
		<th>Type</th>
		<th>Company</th>
		<th>Approved</th>
		
		<th>Approve</th>
		<th>Reject</th>
	</tr>
	<%@leaves.each do |r|%>
	<tr>
		<td><%= r.datestart%></td>
		<td><%= r.dateend%></td>
		<td><%= r.total%></td>
		<td><%= r.reason%></td>
		<td><%= r.leavetype%></td>
		<td><%= r.company%></td>
		<td><%= r.approved%></td>
		
		<td><a href='/admins/approve?id=<%= r.id%>'>Approve</a></td>
		<td><a href='/admins/reject?id=<%= r.id%>'>Reject</a></td>
	</tr>
	<%end%>
</table>

<%end%>

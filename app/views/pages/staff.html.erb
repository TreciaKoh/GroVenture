<h1>Staff Page</h1>
<%if session[:type]=='Staff'%>
<%if !@records.nil?%>
<table class = "table table-bordered table-condensed"> 
	<tr><td>CompanyName</td>
	<td>address</td>
	<td>postalCode</td>
	<td>contactPerson</td>
	<td>position</td>
	<td>hp</td>
	<td>office</td>
	<td>email</td>
	<td>apptBy</td>
	<td>dateAppt</td>
	<td>remarks</td>
	<td bgcolor=#00FF00>attendedBy</td>
	<td bgcolor=#00FF00>grade</td>
	<td bgcolor=#00FF00>Remarks</td>
	<td>Edit</td>
	<td>Delete</td>
	</tr>
<%@records.each do |r|%>	
<tr>
	<td><%=r.companyName%></td>
	<td><%=r.address%></td>
	<td><%=r.postalCode%></td>
	<td><%=r.contactPerson%></td>
	<td><%=r.position%></td>
	<td><%=r.hp%></td>
	<td><%=r.office%></td>
	<td><%=r.email%></td>
	<td><%=r.apptBy%></td>
	<td><%=r.dateAppt%></td>
	<td><%=r.remarks%></td>
	<td><%=r.attendedBy%></td>
	<td><%=r.attendedByGrade%></td>
	<td><%=r.attendedByRemarks%></td>
	<td><a href='/pages/editRecord?id=<%=r.id%>'>Edit</a></td>
  	<td><a href='/pages/deleteRecord?id=<%=r.id%>'>Delete</a></td>
	
</tr>
<%end%>	
</table>
<%end%>

<h2>Add new record:</h2>

<%= form_for @new_record, :url => { :action => "add" }  do |f|  %>
			<%= f.text_field  :companyName %>:companyName<br>
			<%= f.text_field  :address %>:address<br>
			<%= f.text_field  :postalCode %>:postalCode<br>
			<%= f.text_field  :contactPerson %>:contactPerson<br>
			<%= f.text_field  :position %>:position<br>
			<%= f.text_field  :hp %>:hp<br>
			<%= f.text_field  :office %>:office<br>
			<%= f.text_field  :email %>:email<br>
			<!-- <%= f.text_field  :apptBy %>:apptBy<br> -->
			<%= f.datetime_local_field  :dateAppt %>:dateAppt<br>
			<%= f.text_field  :remarks %>:remarks<br>
			<%=f.select(:attendedBy, options_from_collection_for_select(@staff, "staffid", "staffid"), include_blank: true)%>AttendedBy<br>
			<%= f.select(:attendedByGrade, "<option>0%</option><option>25%</option><option>50%</option><option>75%</option><option>100%</option>".html_safe, include_blank: true) %>Grade<br>
			<!-- <%= f.text_field  :attendedBy %>:attendedBy<br> -->
			<!-- <%= f.text_field  :attendedByGrade %>grade<br> -->
			<%= f.text_field  :attendedByRemarks %>remarks<br>
			<%= f.submit "Add record", class: "btn btn-primary" %>
			<%end%>
<%end%>
